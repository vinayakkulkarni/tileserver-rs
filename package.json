{
  "name": "tileserver-rs",
  "version": "0.0.0",
  "private": true,
  "description": "Tileserver for serving vector maps from data source(s)",
  "workspaces": {
    "packages": [
      "apps/*",
      "!apps/docs"
    ],
    "catalog": {
      "vue": "^3.5.27",
      "vue-tsc": "^3.2.4",
      "typescript": "^5.9.3",
      "oxlint": "^1.42.0",
      "oxfmt": "^0.27.0",
      "nuxt": "^4.3.0",
      "maplibre-gl": "^5.17.0",
      "@nuxtjs/color-mode": "^4.0.0",
      "@vueuse/core": "^14.2.0",
      "@vueuse/nuxt": "^14.2.0",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "lucide-vue-next": "^0.563.0",
      "radix-vue": "^1.9.17",
      "reka-ui": "^2.8.0",
      "tailwind-merge": "^3.4.0",
      "tailwindcss-animate": "^1.0.7",
      "tw-animate-css": "^1.4.0",
      "@nuxt/eslint": "^1.13.0",
      "@nuxt/eslint-config": "^1.13.0",
      "@tailwindcss/postcss": "^4.1.18",
      "@types/node": "^25.1.0",
      "eslint": "^9.39.2",
      "eslint-plugin-better-tailwindcss": "^4.0.2",
      "eslint-plugin-oxlint": "^1.42.0",
      "shadcn-nuxt": "^2.4.3",
      "tailwindcss": "^4.1.18",
      "vite": "^7.3.1"
    },
    "catalogs": {
      "client": {
        "@deck.gl/aggregation-layers": "^9.2.6",
        "@deck.gl/core": "^9.2.6",
        "@deck.gl/geo-layers": "^9.2.6",
        "@deck.gl/layers": "^9.2.6",
        "@deck.gl/mapbox": "^9.2.6",
        "@deck.gl/mesh-layers": "^9.2.6",
        "@geoql/v-maplibre": "^1.5.0",
        "@luma.gl/engine": "^9.2.6",
        "@maplibre/maplibre-gl-inspect": "^1.8.2",
        "@tanstack/query-db-collection": "^1.0.22",
        "@tanstack/vue-db": "^0.0.102",
        "@tanstack/vue-query": "^5.92.9"
      },
      "marketing": {
        "@nuxtjs/plausible": "^2.0.1",
        "wrangler": "^4.59.2"
      }
    }
  },
  "scripts": {
    "dev:client": "bun run --filter @tileserver-rs/client dev",
    "dev:docs": "cd apps/docs && bun run dev",
    "dev:marketing": "cd apps/marketing && bun run dev",
    "build:client": "bun run --filter @tileserver-rs/client build",
    "build:docs": "cd apps/docs && bun run build",
    "build:marketing": "cd apps/marketing && bun run build",
    "lint": "bun run --filter @tileserver-rs/client lint:fix",
    "format": "bun run --filter @tileserver-rs/client format",
    "update:deps": "bunx taze -I",
    "prepare": "is-ci || husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "typescript": "catalog:"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vinayakkulkarni/tileserver-rs.git"
  },
  "keywords": [
    "tileserver",
    "pmtiles",
    "mbtiles",
    "gis",
    "vector-tiles"
  ],
  "author": {
    "name": "Vinayak Kulkarni",
    "email": "inbox.vinayak@gmail.com",
    "url": "https://vinayakkulkarni.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vinayakkulkarni/tileserver-rs/issues"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "homepage": "https://tileserver.app"
}
